<main class="container">
  <%= link_to sanitize("&larr; Back to bike"), bike_path(@bike) %>

  <div class="header">
    <h1>Edit bike</h1>
    <div class="bike__actions">
      <%= button_to "Delete",
        bike_path(@bike),
        method: :delete,
        data: { turbo_confirm: "Are you sure?" },
        class: "btn btn--light" %>
      <%= link_to "Cancel", 
        bike_path(@bike), 
        class: "btn btn--light" %>
      <input type="submit" 
        value="Submit" 
        class="btn btn--secondary" 
        form="bike-form">
    </div>
  </div>

  <%= render "form", bike: @bike %>
</main>
