<main class="container">
  <h1>Veloholic</h1>
  <p>Velo addicts unite and share their passion</p>

  <% if user_signed_in? %>
    <%= link_to "View bikes", bikes_path, class: "btn btn--dark" %>
    <%= link_to "View rides", rides_path, class: "btn btn--dark" %>
