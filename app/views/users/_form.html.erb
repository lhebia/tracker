<%= simple_form_for user, html: { class: "form", id: "user-form" } do |f| %>
  <% if user.errors.any? %>
    <div class="error-message">
      <%= user.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :first_name, input_html: { autofocus: true, placeholder: "First name"} %>
  <%= f.input :last_name, input_html: { placeholder: "Last name"} %>
  <%= f.input :username, input_html: { placeholder: "Username"} %>
  <%= f.file_field :avatar %>
<% end %>
